@{
    ViewData["Title"] = "Home Page";
}

@model IEnumerable<CarViewer.Models.CarViewModel>

<div class="text-center">
    <h1 class="display-6">Registered Cars</h1>

    @if (Model != null && Model.Count() > 0) {
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">Make</th>
                    <th scope="col">Model</th>
                    <th scope="col">Mileage</th>
                    <th scope="col">Year</th>
                    <th scope="col">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var car in Model) {
                    <tr>
                        <td>@car.Make</td>
                        <td>@car.Model</td>
                        <td>@car.Mileage</td>
                        <td>@car.Year</td>
                        <td>
                            <div class="btn-group" role="group">
                                <button type="button" class="btn btn-secondary" onclick="location.href = '@Url.Action(action: string.Empty, controller: "Details", new { @car.VIN })'">
                                    Details
                                </button>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>
